<div>
    <h4 style=" display: flex;
   align-items: center;
   justify-content: center;
   flex-direction: column;">Create Job</h4>
</div>
<div class="container">
  <form action="/">
    <div class="row">
      <div class="col-25">
        <label for="jTitle">Job Title</label>
      </div>
      <div class="col-75">
        <input type="text" id="jTitle" name="jobTitle" placeholder="Enter Job Title">
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="jobDescription">Job Description</label>
      </div>
      <div class="col-75">
        <input type="text" id="jobDescription" name="jobDescription" placeholder="Enter Job Description">
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="JobStreetName">Job Street Name</label>
      </div>
      <div class="col-75">
        <input type="text" id="JobStreetName" name="JobStreetName" placeholder="Enter Job Street Name">
      </div>
    </div>
   <div class="row">
      <div class="col-25">
        <label for="JobAuthor">Job Author</label>
      </div>
      <div class="col-75">
        <input type="text" id="JobAuthor" name="JobAuthor" placeholder="Enter Job Author Name">
      </div>
    </div>

    <div class="row" style="margin-top: 10px;">
      <input  type="submit" value="Submit">
    </div>
  </form>
</div>